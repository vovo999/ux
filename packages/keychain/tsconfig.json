{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "/lib",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@blockstack/rpc-client": ["../../rpc-client/src"]
    },
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ]
}
