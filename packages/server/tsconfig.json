{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
  ],
  "compilerOptions": {
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./",
  }
}
